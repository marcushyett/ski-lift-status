{
  "name": "ski-resort-status",
  "version": "2.1.1",
  "description": "Fetch live ski resort lift and run status data with OpenSkiMap integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ski-resort-status": "dist/cli.js"
  },
  "files": [
    "dist",
    "data",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "fetch-data": "tsx scripts/fetch-openskimap-data.ts",
    "discover": "tsx scripts/discover-status-pages.ts"
  },
  "keywords": [
    "ski",
    "lift",
    "run",
    "status",
    "resort",
    "openskimap",
    "lumiplan",
    "live",
    "real-time",
    "typescript"
  ],
  "author": "Marcus Hyett",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcushyett/ski-lift-status.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
